<header class="header">
  <div class="navigation bd-grid">
    <div class="nav__logo">
      <a href="#"><img src="/Images/schoolmate logo n.png"></a>
    </div>

    <div class="nav__toggle" id="nav-toggle">
      <i class="fa fa-bars"></i>
    </div>
  </div>
</header>
<div class="page_body">
  <div class="register-form">
    <h1>Register</h1>
    <%- include ('./partials/messages') %>
    <form action="/users/register" method="POST">
      <div>
        <label for="name">Name</label>
        <input class="form-control" type="name" name="name" placeholder="Enter Name"
          value="<%= typeof name != 'undefined' ? name : '' %>" />

      </div>
      <div>
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" placeholder="Enter Email"
          value="<%= typeof email != 'undefined' ? email : '' %>" />
      </div>
      <div>
        <label for="county">County</label>
        <input class="form-control" type="text" name="county" placeholder="Enter County"
          value="<%= typeof county != 'undefined' ? county : '' %>" />
      </div>
      <div>
        <label for="level">Level</label>
        <select class="form-control" type="text" name="level" placeholder="Enter Level"
          value="<%= typeof level != 'undefined' ? level : '' %>" />
        <option></option>
        <option>Primary</option>
        <option>Secondary</option>
        </select>
      </div>
      <div>
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" placeholder="Create Password"
          value="<%= typeof password != 'undefined' ? password : '' %>" />
      </div>
      <div>
        <label for="password2">Confirm Password</label>
        <input class="form-control" type="password" name="password2" placeholder="Confirm Password"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
      </div>
      <div>
        <label for="role">Role</label>
        <input class="form-control" type="hidden" name="role" placeholder="Role" value="admin" />
      </div>
      <br>
      <button type="submit" class="btn btn-primary btn-block">
        Register
      </button>
    </form>
    <p>Already have an account? <a href="/users/login">Login</a></p>
    <p>Don't have an account? <a href="/users/register">Register</a></p>
    <button class="btn btn-secondary btn-block"><a href="/">Home</a>
    </button>
  </div>
</div>